import requests

source_url = "https://satoshi-cors.herokuapp.com/http://116.204.149.16/mytv/tracks-v1a1/mono.m3u8"

def create_m3u():
    try:
        content = "#EXTM3U\n"
        content = content + "#EXTINF:-1, My TV Live\n"
        content = content + source_url + "\n"
        
        with open("playlist.m3u", "w") as f:
            f.write(content)
        print("Playlist updated successfully!")
    except Exception as e:
        print(f"Error: {e}")

if __name__ == "__main__":
    create_m3u()
